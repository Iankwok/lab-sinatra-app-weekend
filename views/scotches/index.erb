<h2>Scotches</h2>

<ul class="scotches">
  <% @scotches.each do |scotch| %>
    <li>
      <strong>
        <a href="/scotches/<%= scotch.id %>"><%= scotch.name %><%= scotch.year %></a>
      </strong>

      <a href="/scotches/<%= scotch.id %>/edit">
        Edit
      </a>

      <form action="/scotches/<%= scotch.id %>/delete" method="post" class='delete'>
        <!-- <input type="hidden" name="_method" value="delete"> -->
        <input type='submit' value="Delete">
      </form>
    </li>
  <% end %>
</ul>

<hr/>

<a class="btn" href="/scotches/new">Add scotch</a>